# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
insert_final_newline     = true
ij_visual_guides         = 140
trim_trailing_whitespace = true

[.editorconfig]
ij_editorconfig_align_group_field_declarations     = true
ij_editorconfig_space_after_colon                  = false
ij_editorconfig_space_after_comma                  = true
ij_editorconfig_space_before_colon                 = false
ij_editorconfig_space_before_comma                 = false
ij_editorconfig_spaces_around_assignment_operators = true

[*.{js,jsx,ts,tsx,css,scss,html}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.java]
indent_size                                                  = 4
ij_continuation_indent_size                                  = 4
ij_java_use_single_class_imports                             = true
ij_java_insert_inner_class_imports                           = false
ij_java_class_count_to_use_import_on_demand                  = 2147483647
ij_java_names_count_to_use_import_on_demand                  = 2147483647
ij_java_layout_static_imports_separately                     = true
ij_java_packages_to_use_import_on_demand                     = unset
ij_java_align_multiline_chained_methods                      = true
ij_java_imports_layout                                       = javax.**, |, java.**, |, **, |, org.**, |, com.**, |, me.amasiero.**, |, $*
ij_java_space_after_closing_angle_bracket_in_type_argument   = false
ij_java_space_after_colon                                    = true
ij_java_space_after_comma                                    = true
ij_java_space_after_comma_in_type_arguments                  = true
ij_java_space_after_for_semicolon                            = true
ij_java_space_after_quest                                    = true
